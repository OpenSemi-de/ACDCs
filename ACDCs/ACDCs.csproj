    <None Remove="Resources\Raw\menu_components.json" />
    <None Remove="Resources\Raw\menu_main.json" />
    <None Remove="Resources\Splash\splash.svg" />
  </ItemGroup>


  <ItemGroup>
    <MauiSplashScreen Include="Resources\Splash\splash.svg" />
