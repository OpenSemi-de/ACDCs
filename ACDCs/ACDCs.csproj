  </ItemGroup>

  <ItemGroup>
    <MauiXaml Remove="Components\Window\WindowView.xaml" />
  </ItemGroup>


  <ItemGroup>
    <None Remove="Resources\Fonts\MapleMono-Bold.ttf" />
