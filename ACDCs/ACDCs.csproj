  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\CircuitSheetView.xaml.cs">
      <DependentUpon>CircuitSheetView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ComponentsDetailPopup.xaml.cs">
      <DependentUpon>ComponentsDetailPopup.xaml</DependentUpon>
