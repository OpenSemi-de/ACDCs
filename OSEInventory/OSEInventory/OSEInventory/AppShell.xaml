<?xml version="1.0" encoding="utf-8" ?>

<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:OSEInventory"
       x:Class="OSEInventory.AppShell">

    <Shell.MenuBarItems>
        <MenuBarItem Text="Letter X" />
        <MenuBarItem Text="Letter Y" />
        <MenuBarItem Text="Letter Z" />
    </Shell.MenuBarItems>
    <TabBar>
        <Tab Title="Welcome">
            <ShellContent ContentTemplate="{DataTemplate views:WelcomePage}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>