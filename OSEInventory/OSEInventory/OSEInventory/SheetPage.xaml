<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OSEInventory.SheetPage"
             Title="New sheet">
    <AbsoluteLayout>
        <Frame AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <GraphicsView x:Name="sheetGraphicsView" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="DarkBlue"></GraphicsView>
        </Frame>

        <Frame AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0,0,AutoSize,40">
            <ScrollView VerticalScrollBarVisibility="Never" HorizontalOptions="Fill">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                    <Button Text="R"></Button>
                </StackLayout>
            </ScrollView>
        </Frame>
        <Frame AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0,1,AutoSize,40">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                <Button Text=">"></Button>
            </StackLayout>
        </Frame>
    </AbsoluteLayout>
</ContentPage>
