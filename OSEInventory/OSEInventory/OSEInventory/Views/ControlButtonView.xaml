<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OSEInventory.Views.ControlButtonView"
             AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0,1,AutoSize,62">
    <Frame BackgroundColor="LightGray" BorderColor="WhiteSmoke" >
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                <ImageButton BorderColor="WhiteSmoke" BorderWidth="2" Source="arrow_cursor.png"  x:Name="bnSelectTool" Clicked="BnSelectTool_OnClicked"  HeightRequest="58" WidthRequest="58"></ImageButton>
                <ImageButton BorderColor="WhiteSmoke" BorderWidth="2" Source="arrow_move.png" x:Name="bnMoveTool" Clicked="BnMoveTool_OnClicked" HeightRequest="58" WidthRequest="58"></ImageButton>
                <ImageButton BorderColor="WhiteSmoke" BorderWidth="2" Source="arrow_circle.png" x:Name="bnRotateTool" Clicked="BnRotateTool_OnClicked" HeightRequest="58" WidthRequest="58"></ImageButton>
            </StackLayout>
        </ScrollView>
    </Frame>
</ContentView>
